{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@address": ["./app/models/address.server"],
      "@appointment": ["./app/models/appointment.server"],
      "@components": ["./app/components"],
      "@contexts": ["./app/contexts"],
      "@customer": ["./app/models/customer.server"],
      "@errors": ["./app/functions/errors.ts"],
      "@functions": ["./app/functions"],
      "@icons": ["./app/icons"],
      "@types": ["types.d.ts"],
    },
    "noEmit": true
  }
}
